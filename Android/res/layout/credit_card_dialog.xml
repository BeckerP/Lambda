<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CreditCardDialog="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
        
     <TextView 
         android:id="@+id/textCredit"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/credit_card_instructions"
         android:padding="15dp"
         />  
         
	 <EditText
         android:id="@+id/editCredit"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="4dp"
         android:layout_marginLeft="4dp"
         android:layout_marginTop="16dp"
         android:hint="@string/creditCardHint"
         android:inputType="number"
         android:maxLength="16"
         android:text="" />
	 
	 <TextView
	     android:id="@+id/error"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/credit_card_error"
         android:padding="15dp"
         android:visibility="invisible" />
	     
</LinearLayout>